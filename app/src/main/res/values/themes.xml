<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BapotoVTC" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/yellow</item>
        <!-- Customize your theme here. -->
        <item name="colorButtonNormal">@color/yellow</item>

    </style>

    <style name="Theme.BapotoVTC.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BapotoVTC.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BapotoVTC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>